{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"],
      "@app": ["app"],
      "@app/*": ["app/*"],
      "@global": ["global"],
      "@global/*": ["global/*"],
      "@components": ["app/components"],
      "@components/*": ["app/components/*"],
      "@contents": ["app/contents"],
      "@contents/*": ["app/contents/*"],
      "@server": ["server"],
      "@server/*": ["server/*"],
      "public/*": ["public/*"]
    },
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "/app/tools/glslEditor/libs"]
}
