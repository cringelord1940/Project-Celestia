{
  "name": "@celestia/server",
  "version": "2024.3.13",
  "private": true,
  "license": "MIT",
  "homepage": "https://celestia.theiceji.com",
  "scripts": {
    "format": "prettier --write \"app/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{app,apps,libs,test}/**/*.ts\" --fix",
    "proto:gen": "protoc --plugin=./node_modules/.bin/protoc-gen-ts_proto --ts_proto_out=./ --ts_proto_opt=nestJs=true ./proto/auth.proto",
    "dev": "nest start --watch",
    "stargate:dev": "nest start stargate --watch",
    "stella:dev": "nest start stella --watch",
    "interlink:dev": "nest start interlink --watch",
    "astra:dev": "nest start astra --watch",
    "dev:debug": "nest start --debug --watch",
    "stargate:dev:debug": "nest start stargate --debug --watch",
    "stella:dev:debug": "nest start stella --debug --watch",
    "interlink:dev:debug": "nest start interlink --debug --watch",
    "astra:dev:debug": "nest start astra --debug --watch",
    "build:stargate": "nest build stargate",
    "build:stella": "nest build stella",
    "build:interlink": "nest build interlink",
    "build:astra": "nest build astra",
    "build": "bun run \"/^build:.*/\"",
    "start": "nest start",
    "start:prod:stargate": "node dist/apps/stargate/src/main",
    "start:prod:stella": "node dist/apps/stella/src/main",
    "start:prod:interlink": "node dist/apps/interlink/src/main",
    "start:prod:astra": "node dist/apps/astra/src/main",
    "start:prod": "bun run \"/^start:prod:.*/\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/jest/bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/celestia-server/test/jest-e2e.json",
    "clean": "rimraf dist out"
  },
  "dependencies": {
    "@apollo/gateway": "^2.8.4",
    "@apollo/server": "^4.10.5",
    "@aws-sdk/client-s3": "^3.620.1",
    "@aws-sdk/lib-storage": "^3.620.1",
    "@aws-sdk/s3-request-presigner": "^3.620.1",
    "@graphql-tools/merge": "^9.0.4",
    "@grpc/grpc-js": "^1.11.1",
    "@grpc/proto-loader": "^0.7.13",
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/apollo": "^12.2.0",
    "@nestjs/cache-manager": "^2.2.2",
    "@nestjs/common": "^10.3.10",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.3.10",
    "@nestjs/graphql": "^12.2.0",
    "@nestjs/microservices": "^10.3.10",
    "@nestjs/platform-express": "^10.3.10",
    "@nestjs/platform-socket.io": "^10.3.10",
    "@nestjs/throttler": "^6.0.0",
    "@nestjs/websockets": "^10.3.10",
    "@nexel/gql": "workspace:*",
    "@nexel/nestjs": "workspace:*",
    "@nexel/prisma": "workspace:*",
    "bcryptjs": "^2.4.3",
    "cache-manager": "^5.7.4",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "commonality": "^0.2.63",
    "commonality-checks-recommended": "^0.0.40",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "graphql": "^16.9.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-tag": "^2.12.6",
    "graphql-type-json": "^0.3.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.1",
    "lodash": "^4.17.21",
    "maath": "^0.10.8",
    "minio": "^8.0.1",
    "nexus": "^1.3.0",
    "nodemailer": "^6.9.14",
    "prisma-graphql-type-decimal": "^3.0.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "superjson": "^2.2.1",
    "ts-proto": "^1.181.1",
    "uuidv7": "^1.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.2",
    "@nestjs/schematics": "^10.1.3",
    "@nestjs/testing": "^10.3.10",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.7",
    "@types/multer": "^1.4.11",
    "@types/node": "^22.0.0",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.3",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.4",
    "yarn-upgrade-all": "^0.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/common(|/.*)$": "<rootDir>/libs/common/src/$1"
    }
  }
}